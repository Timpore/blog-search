<%= form_with(url: posts_path(domain: params[:domain]), method: "get", local: true) do %>
  <%= label_tag(:search, "Search for:") %>
  <%= text_field_tag(:search, params[:search]) %>
  <%= submit_tag("Search") %>
<% end %>

<br />

<% @posts.each do |post| %>
  <%= post.title %>
  Authored by <%= authors(post) %>
  <%= link_to "Show", post %>
  <br/>
<% end %>
